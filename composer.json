{
    "name": "laravel-interaction/support",
    "description": "The Laravel Interaction Support package",
    "keywords": ["laravel", "interaction", "support"],
    "license": "MIT",
    "authors": [
        {
            "name": "zingimmick",
            "email": "zingimmick@outlook.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "require": {
        "php": "^7.2 || ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5.15 || ^8.4 || ^9.3.3",
        "zing/coding-standard": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "LaravelInteraction\\Support\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelInteraction\\Support\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint:rector": "@fix:rector --dry-run",
        "lint:ecs": "ecs check --ansi",
        "fix:rector": "rector process --ansi",
        "fix:ecs": "@lint:ecs --fix",
        "test:phpunit": "phpunit --colors=always",
        "lint": [
            "@lint:rector",
            "@lint:ecs"
        ],
        "fix": [
            "@fix:rector",
            "@fix:ecs"
        ],
        "test": [
            "@test:phpunit"
        ]
    }
}
